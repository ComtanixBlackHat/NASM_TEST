<script>
  function addRow() {
      const table = document.getElementById("supplierTable").getElementsByTagName("tbody")[0];
      const rowCount = table.rows.length;
      const row = table.insertRow(rowCount);
      const cellCount = table.rows[0].cells.length;

      for (let i = 0; i < cellCount; i++) {
          const newCell = row.insertCell(i);
          if (i === 0) {
              newCell.innerHTML = rowCount + 1;
          } else if (i === cellCount - 1) {
              newCell.innerHTML = `<button class="hide-when-print" onclick="removeRow(this)">Remove</button>`;
          } else {
              newCell.innerHTML = `<input type="text">`;
          }
      }
  }

  function removeRow(button) {
      const row = button.parentNode.parentNode;
      row.parentNode.removeChild(row);
  }
</script>
