    <script>
        function updateTotal() {
            let total = 0;
            document.querySelectorAll('#itemTable tbody .total-price').forEach(cell => {
                let totalPrice = parseFloat(cell.textContent.replace(/[^0-9.-]+/g, ""));
                if (!isNaN(totalPrice)) {
                    total += totalPrice;
                }
            });
            document.getElementById('totalPrice').textContent = total.toFixed(2);
        }

        function updateRow(input) {
            const row = input.closest('tr');
            const quantity = parseFloat(row.cells[2].querySelector('input').value);
            const costPerUnit = parseFloat(row.cells[3].querySelector('input').value);
            const totalPriceCell = row.querySelector('.total-price');

            if (!isNaN(quantity) && !isNaN(costPerUnit)) {
                const totalPrice = quantity * costPerUnit;
                totalPriceCell.textContent = totalPrice.toFixed(2);
            } else {
                totalPriceCell.textContent = '0.00';
            }
            updateTotal();
        }

        function addRow() {
            const tableBody = document.querySelector('#itemTable tbody');
            const rowCount = tableBody.rows.length;

            const newRow = tableBody.insertRow(-1);
            newRow.innerHTML = `
                <td><input type="text" value="${rowCount + 1}" oninput="updateRow(this)" /></td>
                <td><input type="text" value="New Item Description" oninput="updateRow(this)" /></td>
                <td><input type="number" value="1" oninput="updateRow(this)" /></td>
                <td><input type="number" value="0.00" oninput="updateRow(this)" /></td>
                <td class="total-price">0.00</td>
                <td><button class="button" onclick="deleteRow(this)">Delete</button></td>
            `;

            updateTotal();
        }

        function deleteRow(button) {
            const row = button.closest('tr');
            row.remove();
            updateTotal();
        }

        // Initialize event listeners for existing rows
        document.querySelectorAll('#itemTable tbody tr').forEach(row => {
            row.querySelectorAll('input').forEach(input => {
                input.addEventListener('input', function() {
                    updateRow(this);
                });
            });
        });

        updateTotal();
    </script>

