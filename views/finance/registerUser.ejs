  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      line-height: 1.6;
    }

    .header {
      font-weight: bold;
      text-align: left;
      line-height: 2;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .header img {
      height: 100px;
    }

    .form-title {
      text-align: center;
      font-weight: bold;
      margin: 20px 0;
    }

    .memo-content {
      width: 100%;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #000;
    }

    .editable {
      border: none;
      display: inline-block;
      text-decoration: underline;
      min-height: 1.5em;
      background: linear-gradient(transparent 90%, black 90%);
      background-repeat: repeat-x;
      background-size: 100% 1px;
    }

    .editable:focus {
      outline: none;
    }

    .sign-section {
      margin-top: 50px;
    }

    .signature {
      margin-top: 40px;
    }

    .button-container {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-top: 20px;
    }

    .submit-btn {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .print-btn {
      padding: 10px 20px;
      background-color: green;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .submit-btn:hover,
    .print-btn:hover {
      background-color: green;
    }

    @media print {
      body * {
        visibility: hidden;
      }

      .memo-content,
      .memo-content * {
        visibility: visible;
      }

      .memo-content {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
      }

      .submit-btn,
      .print-btn {
        display: none;
      }

      .editable {
        border: none;
        display: inline-block;
        text-decoration: none;
        min-height: 1.5em;
        background: linear-gradient(transparent 90%, black 90%);
        background-repeat: repeat-x;
        background-size: 100% 1px;
      }
    }
  </style>
