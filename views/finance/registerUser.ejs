  <main id="main" class="main">

   
    <div class="container mt-5">
      <h1 class="text-center mb-4">Register User</h1>

      <!-- Register User Form -->
      <form id="registerForm" onsubmit="handleFormSubmit(event)">
        <div class="row mb-3">
          <!-- Name -->
          <div class="col-md-6">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
          </div>

          <!-- Designation -->
          <div class="col-md-6">
            <label for="designation" class="form-label">Designation</label>
            <input type="text" class="form-control" id="designation" placeholder="Enter your designation" required>
          </div>
        </div>

        <div class="row mb-3">
          <!-- Password -->
          <div class="col-md-6">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Enter your password" required>
          </div>

          <!-- Email -->
          <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
          </div>
        </div>

        <div class="row mb-3">
          <!-- Signature Upload -->
          <div class="col-md-6">
            <label for="signature" class="form-label">Signature</label>
            <input type="file" class="form-control" id="signature" accept="image/*" required>
          </div>

          <!-- Profile Picture Upload -->
          <div class="col-md-6">
            <label for="profilePic" class="form-label">Profile Picture</label>
            <input type="file" class="form-control" id="profilePic" accept="image/*" required>
          </div>
        </div>

        <div class="row mb-3">
          <!-- Role Selection -->
          <div class="col-md-12">
            <label for="role" class="form-label">Role</label>
            <select class="form-select" id="role" required>
              <option selected disabled value="">Choose role</option>
              <option value="Managing Director">Managing Director</option>
              <option value="Deputy Managing Director">Deputy Managing Director</option>
              <option value="Director of Finance &amp; Admin">Director of Finance &amp; Admin</option>
              <option value="Director of Procurement">Director of Procurement</option>
              <option value="Director of Quality Assurance">Director of Quality Assurance</option>
              <option value="Director of Operations">Director of Operations</option>
              <option value="Director of Human Resources">Director of Human Resources</option>
              <option value="ICT Manager">ICT Manager</option>
              <option value="MIS Supervisor/Manager">MIS Supervisor/Manager</option>
              <option value="National Logistics Manager">National Logistics Manager</option>
              <option value="National Warehouse Manager">National Warehouse Manager</option>
              <option value="Internal Audit Manager">Internal Audit Manager</option>
              <option value="Data Information Officer">Data Information Officer</option>
              <option value="Human Resource Officer">Human Resource Officer</option>
              <option value="Procurement Officer">Procurement Officer</option>
              <option value="Accountant">Accountant</option>
              <option value="Admin Officer">Admin Officer</option>
              <option value="MIS Officer">MIS Officer</option>
              <option value="Finance Officer">Finance Officer</option>
              <option value="Finance Assistant Officer">Finance Assistant Officer</option>
              <option value="Public Relations Officer">Public Relations Officer</option>
              <option value="Receiving Bay Officer">Receiving Bay Officer</option>
              <option value="Central Logistics Officer">Central Logistics Officer</option>
              <option value="Store Assistant">Store Assistant</option>
              <option value="ICT Officer">ICT Officer</option>
              <option value="Driver">Driver</option>
            </select>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
      </form>
