      let sectionCgoodsRowCount = 1;
  
      function sectionCgoodsAddRow() {
          sectionCgoodsRowCount++;
          const table = document.getElementById('sectionCgoodsTable').getElementsByTagName('tbody')[0];
          const newRow = table.insertRow();
  
          for (let i = 0; i < 6; i++) {
              const cell = newRow.insertCell(i);
              const input = document.createElement('input');
              input.type = i === 5 ? 'text' : 'number';
              input.className = i === 3 ? 'form-control sectionCgoods-quantity' : i === 4 ? 'form-control sectionCgoods-unit-price' : 'form-control';
              input.id = `sectionCgoods${i === 0 ? 'ItemNo' : i === 1 ? 'Description' : i === 2 ? 'UnitMeasure' : i === 3 ? 'Quantity' : i === 4 ? 'UnitPrice' : 'TotalPrice'}${sectionCgoodsRowCount}`;
              if (i < 5) {
                  input.addEventListener('input', sectionCgoodsUpdateTotal);
              }
              cell.appendChild(input);
              if (i === 5) {
                  cell.className = 'sectionCgoods-total-price';
                  cell.textContent = '0';
              }
          }
          sectionCgoodsUpdateTotal();
      }
  
      function sectionCgoodsDeleteRow() {
          const table = document.getElementById('sectionCgoodsTable').getElementsByTagName('tbody')[0];
          if (table.rows.length > 1) {
              table.deleteRow(-1);
              sectionCgoodsRowCount--;
              sectionCgoodsUpdateTotal();
          }
      }
  
      function sectionCgoodsUpdateTotal() {
          const rows = document.querySelectorAll('#sectionCgoodsTable tbody tr');
          let total = 0;
  
          rows.forEach(row => {
              const quantity = row.querySelector('.sectionCgoods-quantity').value || 0;
              const unitPrice = row.querySelector('.sectionCgoods-unit-price').value || 0;
              const totalPrice = (quantity * unitPrice).toFixed(2);
              row.querySelector('.sectionCgoods-total-price').textContent = totalPrice;
              total += parseFloat(totalPrice);
          });
  
          document.getElementById('sectionCgoodsTotalAmount').textContent = total.toFixed(2);
      }
  </script>
  
